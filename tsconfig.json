{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types", "src/@types"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules", "dist", "packages"]
}
